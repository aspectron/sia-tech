<% include partial/discover %>
<style type="text/css">
	.result-message{text-align:center;color:#00CBA0;min-height:20px;}
	.result-message.error{color:#d9534f;}
	.result-message .loading-img{animation:rotate 1s infinite; width:20px;}
    @-webkit-keyframes rotate {100% {-webkit-transform: rotate(360deg);}}
	@keyframes rotate {100% {transform: rotate(360deg);}}
</style>
<script type="text/javascript">
	$('form.get-in-touch').on("submit", function(e){
		e.preventDefault();
		var $msgHolder = $('.result-message');
		$msgHolder.removeClass("error").html("<img class='loading-img' src='/img/svg/loading.svg'>");
		$.ajax({
			url: "/about",
			method: "POST",
			data: $(this).serialize(),
			success: function(result){
				var msg = result.error || '<%= _T("Server Error: Please try later.") %>';
				if (result.success){
					msg = '<%= _T("Success: Thanks for contacting.") %>';
				}else{
					$msgHolder.addClass("error");
				}
				$msgHolder.html(msg);
			},
			failure: function(){
				$msgHolder.addClass("error").html('<%= _T("Server Error: Please try later.") %>');
			}
		})
	});
</script>
